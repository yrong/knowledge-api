{
  "name": "kb-api",
  "port":3000,
  "perPageSize":2000,
  "logger":{
    "appenders": [
      {
        "type": "console"
      },
      {
        "type": "file",
        "filename": "kb-api.log",
        "maxLogSize": 20480,
        "numBackups": 5
      }
    ],
    "replaceConsole": true,
    "defaultLevel":"DEBUG"
  },
  "postgres": {
    "host": "localhost",
    "port": 5432,
    "database": "test",
    "user": "postgres",
    "password": "postgres",
    "max": 50,
    "idleTimeoutMillis": 3000,
    "zhparser":"knowledge_zhcfg"
  },
  "cmdb":{
    "base_url":"http://localhost:3001"
  },
  "auth":{
    "check_token_url":"http://localhost:3002/auth/check"
  },
  "upload": {
    "attachment": {
      "url": "/api/upload/share",
      "provider": "nc",
      "nc_host":"http://localhost:8089/FileStore",
      "nc_admin_user":"admin",
      "nc_admin_password":"admin",
      "nc_share_path":"/share",
      "limits":{
        "fileSize":10000
      }
    },
//    "images": {
//      "url": "/api/upload/images",
//      "provider": "nc",
//      "nc_host":"http://localhost:8089/FileStore",
//      "nc_admin_user":"admin",
//      "nc_admin_password":"admin",
//      "nc_share_path":"/share/images",
//      "nc_image_preview": true,
//      "mimetypes": ["image/png","image/bmp","image/jpeg"]
//    }
    "images": {
      "url": "/api/upload/images",
      "provider": "local",
      "storeDir": "/",
      "provider": "local",
      "folder": "public/upload",
      "urlPath": "upload",
      "mimetypes": ["image/png","image/bmp","image/jpeg"]
    }
  }
}